<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Skills</title>
</head>
<body>
    <body>
        <h1>Skills</h1>
        <ul>
          <% skills.forEach(function(skill) { %>
            <li>
              <form action="/skills/<%= skill.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              <%= skill.skill %>
              <%= skill.id %>
            </li>
            </form>
          <% }); %>
        </ul>
      </body>
      <a href="/skills/new">Add Skills</a>
</body>
</html>